<UserControl x:Class="WpfDemo.SingleSelectors.SingleSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo.SingleSelectors"
         xmlns:ui="clr-namespace:WpfDemo.SingleSelectors"
        mc:Ignorable="d">
    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Right">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5">
                    <Button Name="btnSelectId" Content="获得选中项" Click="btnSelectId_Click"></Button>
                </StackPanel>
            </Border>
            <Border>
                <ui:SingleSelector x:Name="singleSelector"></ui:SingleSelector>
            </Border>
        </DockPanel>
        
    </Grid>
</UserControl>
