<UserControl x:Class="WpfDemo.Borders.BorderTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo.Borders"
        mc:Ignorable="d">
    <Canvas>
        <!--设置Background：方框范围内均可响应事件-->
        <Border Height="100" Width="100" Background="White" BorderBrush="Green" 
                BorderThickness="2,2,2,2" Margin="499,179,193,140" MouseDown="borderWithBackground_MouseDown" 
                MouseLeftButtonDown="borderWithBackground_MouseDown"></Border>
        <!--不设置Background：仅边框响应事件-->
        <Border Height="100" Width="100" BorderBrush="BlueViolet" BorderThickness="2,2,2,2" 
                Margin="103,115,589,204" MouseDown="borderWithoutBackground_MouseDown" 
                MouseLeftButtonDown="borderWithoutBackground_MouseDown"></Border>
    </Canvas>
    
</UserControl>
