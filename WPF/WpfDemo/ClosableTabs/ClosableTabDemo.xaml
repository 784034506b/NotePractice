<Window x:Class="WpfDemo.ClosableTabs.ClosableTabDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo.ClosableTabs"
        mc:Ignorable="d"
        Title="ClosableTabDemo" Height="450" Width="800">
    <Grid>
        <TabControl Margin="12,54,0,0" Name="tabControl1"></TabControl>
        <Button Height="23" HorizontalAlignment="Left" Margin="62,24,0,0" Name="button1" VerticalAlignment="Top" Width="118" Click="button1_Click">New Tab (small title)</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,25,80,0" Name="button2" VerticalAlignment="Top" Width="114" Click="button2_Click">New Tab (long title)</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,25,250,0" Name="button3" VerticalAlignment="Top" Width="114" Click="button3_Click">动态加载</Button>
    </Grid>
</Window>
