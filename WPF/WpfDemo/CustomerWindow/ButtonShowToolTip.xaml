<UserControl x:Class="WpfDemo.CustomerWindow.ButtonShowToolTip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo.CustomerWindow"
        mc:Ignorable="d" Height="300" Width="300">
    <Grid>
        <Button Content="指向我" Margin="100">
            <Button.ToolTip>
                <StackPanel>
                    <GroupBox Header="你喜欢什么水果？">
                        <GroupBox.Content>
                            <StackPanel>
                                <TextBlock>A.苹果</TextBlock>
                                <TextBlock>B.榴莲</TextBlock>
                                <TextBlock>C.桃子</TextBlock>
                                <TextBlock>D.香蕉</TextBlock>
                            </StackPanel>
                        </GroupBox.Content>
                    </GroupBox>
                </StackPanel>
            </Button.ToolTip>
        </Button>
    </Grid>
</UserControl>
