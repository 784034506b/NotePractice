<UserControl x:Class="WpfDemo.PauseAndResumeThread.PauseAndResumeThreadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo.PauseAndResumeThread"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="开始" Click="Start_Click"></Button>
            <Button Content="暂停" Click="Pause_Click"></Button>
            <Button Content="继续" Click="Resume_Click"></Button>
            <Button Content="取消" Click="Cancle_Click"></Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label Content="开始后开始更新时间"></Label>
            <Label Name="timeLabel"></Label>
            <Label Content="计数"></Label>
            <Label Name="numberLabel"></Label>
        </StackPanel>
    </Grid>
</UserControl>
