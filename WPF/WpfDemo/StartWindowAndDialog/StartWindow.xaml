<UserControl x:Class="WpfDemo.StartWindowAndDialog.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo.StartWindowAndDialog"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="The content entered below will be displayed in the pop-up window(下面输入的内容将显示在弹窗中)"></TextBlock>
        <TextBox Margin="5" Grid.Row="1" x:Name="InputTextBox"></TextBox>
        <Button Margin="5" Grid.Row="2" Content="打开弹窗" Click="OpenDialog"></Button>
    </Grid>
</UserControl>
