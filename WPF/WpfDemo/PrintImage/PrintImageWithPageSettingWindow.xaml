<Window x:Class="WpfDemo.PrintImage.PrintImageWithPageSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo.PrintImage"
        mc:Ignorable="d"
        Title="PrintImageWithPageSettingWindow" Height="1500" Width="1500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="A4+横向" Click="A4WithHorizontalClick"></Button>
            <Button Content="A4+纵向" Click="A4WithVerticalClick"></Button>
            <Button Content="A3+横向" Click="A3WithHorizontalClick"></Button>
            <Button Content="A3+纵向" Click="A3WithVerticalClick"></Button>
            <Button Content="打印图片" Click="PrintImage"></Button>
        </StackPanel>
        <Border Grid.Row="1" Name="imageBorder" Height="29.7cm" Width="21cm" Background="BlueViolet"></Border>
    </Grid>
</Window>
