<UserControl x:Class="WpfDemo.NavigationPages.DepartmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDemo.NavigationPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Department Details"/>
        <Label Content="部门ID"></Label>
        <TextBox Text="{Binding DepartmentId,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Label Content="部门姓名"></Label>
        <TextBox Text="{Binding DepartmentName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
    </StackPanel>
</UserControl>
